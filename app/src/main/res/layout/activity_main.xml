    <LinearLayout
        android:id="@+id/playerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout"
        >


        <ImageView
            android:id="@+id/p1Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/p2Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/p3Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/p4Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/p5Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/compLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <ImageView
            android:id="@+id/c1Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/c2Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/c3Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/c4Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />
        <ImageView
            android:id="@+id/c5Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            />

    </LinearLayout>




